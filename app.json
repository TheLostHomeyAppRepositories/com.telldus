						"hint": {
							"en": "Z-Wave Plus Lifeline"
			        	}
			    	},
					"2": {
			        	"hint": {
							"en": "Sensor status\nThe sensor will send control commands to nodes in this group when the status of the sensor changes."
			        	}
			      	},
